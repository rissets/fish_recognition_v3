# Fish Recognition API Environment Configuration

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production-12345
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (using SQLite for development)
# DATABASE_URL=sqlite:///db.sqlite3

# Redis (for caching and WebSocket)
REDIS_URL=redis://127.0.0.1:6379/0

# Model Settings
FISH_DEVICE=cpu
FISH_CONFIDENCE_THRESHOLD=0.5
FISH_NMS_THRESHOLD=0.3
FISH_SEGMENTATION_THRESHOLD=0.5

# Performance Settings
ENABLE_MODEL_CACHING=True
CACHE_TIMEOUT=3600
BATCH_SIZE=1

# Logging Level
LOG_LEVEL=INFO

# Ollama LLM Settings (for enhanced fish classification)
OLLAMA_URL=https://ollama.hellodigi.id
OLLAMA_MODEL=gamma3
LLM_ENABLED=True
LLM_TIMEOUT=30

# Static/Media Settings
STATIC_ROOT=/Users/user/Dev/researchs/fish_recognition_v2/fish_api/staticfiles
